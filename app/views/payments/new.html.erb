<script type="text/javascript">
  var d = document.getElementById("payments");
  d.className = d.className + " active";
</script>

<h2>Issue Payment</h2>
</br>
<div class="col-md-3"></div>
<div class="col-md-9">
	<%= form_for @payment do |pay| %>
		<div class="form-group">
			<label>Date</label>
			<input style = 'width:70%;height:34px;'  class = 'form-control' value = '<%=DateTime.now.strftime('%a, %B %e, %Y')%>' disabled >
			<br>
			<label> Company/Party  </label>
			<%= pay.collection_select :customer_id, Customer.order(:name),:id,:name , {}, {class: "form-control", style: 'width:70%;'} %>
		</div>

		<div class="form-group">
			<%= pay.label :Amount %>
			<%= pay.text_field :total , :style => 'width:70%;height:34px;', class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= pay.label :ramarks %>
			<%= pay.text_field :remarks , :style => 'width:70%;height:34px;', class: 'form-control'%>
		</div>

		<div class="form-group">
			<%= pay.submit :class => 'btn btn-block btn-success form-control', :style => 'width:70%' %>
		</div>

	<% end %>
</div>
