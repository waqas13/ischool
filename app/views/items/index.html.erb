<script type="text/javascript">
  var d = document.getElementById("items");
d.className = d.className + " active";
  $(document).ready(function() {
    $('#example').dataTable({
      "order": [[0, "asc"]],
      dom: 'T<"clear">lfrtip',
      tableTools: {
        "sSwfPath": "//cdn.datatables.net/tabletools/2.1.5/swf/copy_csv_xls_pdf.swf",
        "aButtons": [
          {
            "sExtends": "copy",
            "sButtonText": "Copy to clipboard"
          },
          {
            "sExtends": "csv",
            "sButtonText": "Save to CSV"
          }
        ]
      }
    });
  });

</script>

<h2>Items<a href="<%= items_new_path %>" class="btn btn-info pull-right" style="width:200px;">Add an Item</a></h2>
    <table id="example" class="display">
      <thead>
        <tr>
          <th>Quality Title</th>
          <th>Stock Present (Kg)</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @items.try(:each) do |item| %>
          <tr>
            <td>
              <%= link_to item.title, item_path(item.id) %>
            </td>
            <td>
              <%= item.left %>
            </td>
            <td>
              <%= link_to 'Delete Item', item_path(item.id), method: 'delete' , class: 'btn btn-danger', :id => 'deletebtn', :name => item.id %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>