		<div class="form-group">
			<%= std.label :address %>
			<%= std.text_area :address , :style => 'width:70%;', rows: 3, class: 'form-control' %>
		</div>
		</br>
		<div class="form-group">
			<%= std.submit :class => 'btn btn-block btn-success form-control', :style => 'width:70%' %>
