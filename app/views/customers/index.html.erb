<script type="text/javascript">
  var d = document.getElementById("customers");
  d.className = d.className + " active";
  $(document).ready(function() {
  

    $('#example').dataTable({
        "order": [[0, "asc"]],
        dom: 'T<"clear">lfrtip',
        tableTools: {
          "sSwfPath": "//cdn.datatables.net/tabletools/2.1.5/swf/copy_csv_xls_pdf.swf",
          "aButtons": [
              {
                  "sExtends": "copy",
                  "sButtonText": "Copy to clipboard"
              },
              {
                  "sExtends": "csv",
                  "sButtonText": "Save to CSV"
              }
          ]
        }
    });
  });

</script>

<h2>Customers<a href="<%= new_customer_path %>" class="btn btn-info pull-right" style="width:200px;">Add a Customer</a></h2>
    <table id="example" class="display">
      <thead>
        <tr>
          <th>Title</th>
          <th>Contact</th>
          <th>Credit</th>
          <th>Paid</th>
          <th>Total</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.try(:each) do |cust| %>
          <tr>
            <td>
              <%= link_to cust.name, customer_invoice_path(cust.id) %>
            </td>
            <td>
              <%= cust.contact %>
            </td>
            <td>
              <%= cust.credit %>
            </td>
            <td>
              <%= cust.paid %>
            </td>
            <td>
              <%= cust.paid + cust.credit %>
            </td>
            <td>
              <%= link_to 'Delete', customer_path(cust.id), method: 'delete' , class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

