<h2>Add a Customer</h2>
</br>
<div class="col-md-3"></div>
<div class="col-md-9">
	<%= form_for @customer do |cust| %>
		<div class="form-group">
			<%= cust.label :name %>
			<%= cust.text_field :name , :style => 'width:70%;height:34px;',  class: 'form-control', required: true, autofocus: true %>
		</div>

		<div class="form-group">
			<%= cust.label :contact %>
			<%= cust.text_field :contact , :style => 'width:70%;height:34px;', class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= cust.submit :class => 'btn btn-block btn-success form-control', :style => 'width:70%' %>
		</div>
		
	<% end %>
</div>