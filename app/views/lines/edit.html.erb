<script type="text/javascript">
  var d = document.getElementById("saless");
d.className = d.className + " active";
</script>


<%= form_for @invoice, url: updateInvoice_sales_path(@autogen), methoed: :post do |inv| %>
	<h2>Sale Invoice</h2>
	<br>
	<div class="form-group " style=" float:right; margin-right: 242px;">
		<label>Date </label>
		<input style = 'width:151%;height:34px;'  class = 'form-control' value = '<%=@invoice.created_at.strftime('%a, %B %e, %Y')%>' disabled >
	</div>
	<br><br><br><br>
	<div class="col-md-6">
		<div class="form-group">
			<label>invoice ID</label>
			<input style = 'width:70%;height:34px;'  class = 'form-control' value = '<%=@autogen%>' disabled >
		</div>

		<div class="form-group">
			<label>Driver</label>
			<%= inv.text_field :driver , :style => 'width:70%;height:34px;', class: 'form-control', required: true,  disabled: true%>
		</div>

	</div>
	<div class="col-md-6">

		<div class="form-group">
			<label> Company/Party  </label>
			<%= inv.collection_select :customerName, Customer.order(:name),:name,:name , {}, {class: "form-control", style: 'width:70%;' , disabled: true} %>
			
		</div>
		
		<div class="form-group">
			<label>Vehicle #</label>
			<%= inv.text_field :vehicle, :style => 'width:70%;height:34px;', class: 'form-control' , disabled: true%>
		</div>

		<div class="form-group">
			<label>Total Amount</label>
			<input style = 'width:70%;height:34px;' id = "totalfield" class = 'form-control' placeholder = '0' disabled , value="<%= @bills.sum("(gross-tear) * price") %>">
		</div>
	</div>
<% end %>
<div class = "col-md-12" style="background-color:black; margin-bottom:20px;margin-top:20px;">	
</div>

<% @bills.each do |bills|%>
<div>
	<%= form_for bills  do |bill| %>
		<div class="row">
			<%= bill.hidden_field :invoice_id, :value => @autogen %>
	    	<div class="col-md-3">
	    		<div class="form-group">
					<label>Qualtiy Name</label>
					<%= bill.collection_select :item_id, Item.where.not(status: 'delete').order(:title),:id,:title , {}, {class: "form-control", style: 'width:100%;height:34px;', id: 'item_code', disabled: true} %>
				</div>
	    	</div>

	   		<div class="col-md-3">
	   			<div class="form-group">
					<label>Gross Weight (Kg)</label>
					<%= bill.text_field :gross, :id => 'quantity', :style => 'width:100%;height:34px;', class: 'form-control', required: true %>
				</div>
			</div>

			<div class="col-md-3">
	   			<div class="form-group">
					<label>Tear Weight (Kg)</label>
					<%= bill.text_field :tear, :style => 'width:100%;height:34px;', class: 'form-control', required: true %>
				</div>
			</div>

	    	<div class="col-md-3">
	    		<div class="form-group">
					<label>Rate</label>
					<%= bill.text_field :price, :style => 'width:100%;height:34px;', class: 'form-control', required: true %>
				</div>
			</div>
		</div>
		
		<div class="form-group">
			<span onclick="abc()"><%= bill.submit "Update", :id => "billbutton", :class => 'btn btn-block btn-info form-control', :style => 'width:31%; float:right;' %></span>
		</div>
		<br>

	<% end %>
</div>
<% end %>