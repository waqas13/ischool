<div class="row">
	<div class="col-md-6">
		<%= form_tag "/invoices/report",:method => "get" do |f| %>
			<div>
			 	<label>Please Select The Customer</label>
			 	
			 	<%= select_tag "customers", options_from_collection_for_select(@customers, "id", "name") , :style => 'width:60%;height:34px;', class: 'form-control' %>
			</div>

			<div>
				<label>From Date</label>
				<%= text_field_tag :start_date ,'', :style => 'width:60%;height:34px;', class: 'form-control' %>
			</div>

			<div>
				<label>To Date</label>
				<%= text_field_tag :end_date,'', :style => 'width:60%;height:34px;', class: 'form-control' %>
			</div>
			<%= submit_tag "Generate Report"%>
		<% end %>

	</div>

	<div class="col-md-6">
		<%= form_tag "/items/report",:method => "get" do |f| %>
			<div>
			 	<label>Please Select The Item</label>
			 	
			 	<%= select_tag "items", options_from_collection_for_select(@items, "id", "title") , :style => 'width:60%;height:34px;', class: 'form-control' %>
			</div>

			<div>
				<label>From Date</label>
				<%= text_field_tag :istart_date ,'', :style => 'width:60%;height:34px;', class: 'form-control' %>
			</div>

			<div>
				<label>To Date</label>
				<%= text_field_tag :iend_date,'', :style => 'width:60%;height:34px;', class: 'form-control' %>
			</div>
			<%= submit_tag "Generate Report"%>
		<% end %>

	</div>
</div>

<script type="text/javascript">
	$("#start_date").datepicker({format: 'yyyy-mm-dd'});
	$("#end_date").datepicker({format: 'yyyy-mm-dd'});
	
	$("#istart_date").datepicker({format: 'yyyy-mm-dd'});
	$("#iend_date").datepicker({format: 'yyyy-mm-dd'});

